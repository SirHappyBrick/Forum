<!DOCTYPE html>
<html>
  <head>
    <title>Forum</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
      <div class="navbar-brand">
        <%= link_to "Forum", root_path, class:"navbar-brand" %>
      </div>

      <ul class="navbar-nav nav navbar-right">
        <% if user_signed_in? %>
          <li> <%= link_to 'Sign out', destroy_user_session_path, method: :delete, class:"nav-link active" %> </li>
        <% else %>
          <li> <%= link_to 'Login', new_user_session_path, class:"nav-link active" %> </li>
          <li> <%= link_to 'Sign up', new_user_registration_path, class:"nav-link active" %> </li>
        <% end %>

        <% if user_signed_in?%>
          <p> <%= link_to "Post It", new_message_path, class:"nav-link active" %> </p>
        <% end %>
      </ul>
    </div>
  </nav>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <div class="container"></div>
      <%= yield %>
    </div>
  </body>
</html>
